<VirtualHost *:80>
	ServerName www.yaponama.ru
	ServerAdmin info@yaponama.ru

	DocumentRoot /var/www/yaponama/public

	<Directory />
		Options FollowSymLinks
		AllowOverride All
	</Directory>

	<Directory /var/www/yaponama/public>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride All
		Order allow,deny
		allow from all
	</Directory>

	ErrorLog /var/log/apache2/yaponama.log

	# Possible values include: debug, info, notice, warn, error, crit,
	# alert, emerg.
	LogLevel warn

	CustomLog /var/log/apache2/yaponama.log combined
	
	ProxyPass /json/ http://78.47.225.51:8080/json/
	ProxyPassReverse /json/ http://78.47.225.51:8080/json/

	ProxyPass /static http://78.47.225.51:8080/static
	ProxyPassReverse /static http://78.47.225.51:8080/static
	

	<Proxy http://78.47.225.51:8080>
		Order deny,allow
		Allow from all
	</Proxy>


</VirtualHost>
