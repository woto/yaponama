<% catalog_number = params[:catalog_number] %>
<% manufacturer = params[:manufacturer] %>


<script>
  Application.connect()
  Application.publish('info', "<%= catalog_number %>", "<%= manufacturer %>")
</script>

<div id="info">
</div>

Каталожный номер: <%= catalog_number %>
<br />

Производитель: <%= manufacturer %>
<br />

<%= tag("img", :src => "/static/#{params[:catalog_number]}.png", :alt => "#{params[:catalog_number]} (#{params[:manufacturer]})", :width => "921", :height => "686", :data => {:catalog_number => catalog_number, :manufacturer => manufacturer} ) %>
